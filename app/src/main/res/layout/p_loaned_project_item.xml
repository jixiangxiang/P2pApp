<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rewardArea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/sortArea"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/projectName"
            style="@style/text_12_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="企业经营资金周转(新手额外奖励5.6%)" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@mipmap/p_right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/p_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_18"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loanRates"
            style="@style/text_22_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10.00" />

        <TextView
            android:id="@+id/loanMoney"
            style="@style/text_10_777"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00" />

        <TextView
            android:id="@+id/loanLimit"
            style="@style/text_10_777"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1970-01-01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_18"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="借款年化利率(%)" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="借款金额(元)" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="欠款日期" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_18"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/getMoneyDate"
            style="@style/text_10_777"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2015-12-21" />

        <TextView
            android:id="@+id/repayMoney"
            style="@style/text_10_777"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00" />

        <TextView
            android:id="@+id/repayway"
            style="@style/text_10_777"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="按月付息" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_18"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="欠款期数" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拖欠本息(元)" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="还款方式" />
    </LinearLayout>

</LinearLayout>