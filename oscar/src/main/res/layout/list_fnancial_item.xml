<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:background="@mipmap/o_invest_product_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/productName"
        style="@style/text_14_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_9"
        android:text="点点盈NO.289"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25">

        <TextView
            android:id="@+id/rateYear"
            style="@style/text_18_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="12%"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loanLimit"
            style="@style/text_18_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15天"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loanMoney"
            style="@style/text_18_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50.00万"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8">

        <TextView
            style="@style/text_13_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="年化收益"
            android:textStyle="bold" />

        <TextView
            style="@style/text_13_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="融资期限"
            android:textStyle="bold" />

        <TextView
            style="@style/text_13_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="融资金额"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            style="@style/text_13_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="面向对象"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toObject"
            style="@style/text_13_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":钱包,奥斯卡"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leastMoney"
            style="@style/text_13_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100元起投"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>