<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/p_bg_color"
    android:orientation="vertical"
    tools:context="cn.com.infohold.p2papp.activity.PRepaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_165"
        android:background="@mipmap/p_loan_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_40">

                <TextView
                    style="@style/text_11_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持有总金额  (元)" />

                <TextView
                    android:id="@+id/totalMoney"
                    style="@style/text_18_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="1,6000.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_40">

                <TextView
                    style="@style/text_11_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收本金  (元)" />

                <TextView
                    android:id="@+id/principal"
                    style="@style/text_18_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="1,000.00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_40">

                <TextView
                    style="@style/text_11_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收利息  (元)" />

                <TextView
                    android:id="@+id/interest"
                    style="@style/text_18_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="1000.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_40">

                <TextView
                    style="@style/text_11_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余/持有期限  (天)" />

                <TextView
                    android:id="@+id/surplusLimit"
                    style="@style/text_18_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="22/100" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32">

        <TextView
            style="@style/text_11_99"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="转让设置" />

        <TextView
            style="@style/text_11_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="两天内未成交系统将自动下架" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_11_99"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="我要转让" />

        <EditText
            android:id="@+id/transShare"
            style="@style/text_16_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_95"
            android:background="@android:color/white"
            android:enabled="false"
            android:gravity="center_vertical"
            android:numeric="integer"
            android:text="1" />

        <TextView
            style="@style/text_13_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="份" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_11_99"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="折让金额" />

        <EditText
            android:id="@+id/maxTransMoney"
            style="@style/text_16_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_95"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:numeric="decimal" />

        <TextView
            style="@style/text_13_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="元" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/actualTransMoney"
            style="@style/text_13_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="实际转让金额：0.00元" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/confirmTransBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/p_confirm_trans_btn"
        android:onClick="onClick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/investBtn"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            style="@style/text_12_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="点击“确认转让”按钮，即表示您同意" />

        <TextView
            android:id="@+id/termSheet"
            style="@style/text_12_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《小草金服债权转让协议》" />
    </LinearLayout>
</LinearLayout>
