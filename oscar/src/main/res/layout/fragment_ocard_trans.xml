<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/o_amazon_card" />

        <com.example.eric.oscar.views.WrapScrollListView
            android:id="@+id/cardBarList"
            android:layout_width="@dimen/dp_195"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:divider="@android:color/transparent">

        </com.example.eric.oscar.views.WrapScrollListView>

        <RelativeLayout
            android:layout_width="@dimen/dp_195"
            android:layout_height="@dimen/dp_21">

            <TextView
                style="@style/text_12_55"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="总计 ：" />

            <EditText
                android:id="@+id/totalMoney"
                style="@style/text_10_55"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_40"
                android:background="@drawable/edittext_border_conner"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:text="50" />

            <TextView
                style="@style/text_12_55"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_93"
                android:gravity="center"
                android:text="元" />

            <Button
                android:id="@+id/transBtn"
                style="@style/text_12_white"
                android:layout_width="@dimen/dp_58"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@mipmap/o_btn_bg"
                android:text="立即兑换" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@color/p_bg_color"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:paddingTop="@dimen/dp_15">

            <TextView
                style="@style/text_10_55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="1.使用奥斯卡支付不提供发票，兑换成功后不予退返。" />

            <TextView
                style="@style/text_10_55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="2.兑换成功后交易码将发送到您的手机，请及时充值到亚马逊账户中;" />

            <TextView
                style="@style/text_10_55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="3.奥斯卡兑换亚马逊礼品卡需加收兑换服务费;" />

            <TextView
                style="@style/text_10_55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="4.奥斯卡兑换亚马逊礼品卡每次最高1000元，每日不超过3次;" />

            <TextView
                style="@style/text_10_55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="5.官网礼品卡均来自亚马逊，如何使用请联系亚马逊客服：400-8105666" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

