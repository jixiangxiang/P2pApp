<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_177"
        android:background="@drawable/dialog_corner_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/text_16_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="交易密码" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.1"
            android:background="@color/background_material_light" />

        <TextView
            android:id="@+id/actualMoney"
            style="@style/text_11_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:text="请输入手机支付密码" />

        <EditText
            android:id="@+id/pwdEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/edit_border_bg"
            android:inputType="textPassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.1"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@color/background_material_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelBtn"
                style="@style/text_16_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消" />

            <View
                android:layout_width="@dimen/dp_0.1"
                android:layout_height="match_parent"
                android:background="@color/background_material_light" />

            <TextView
                android:id="@+id/confirmBtn"
                style="@style/text_16_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>