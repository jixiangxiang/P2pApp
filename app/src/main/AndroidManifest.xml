<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.infohold.p2papp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.PHomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.PMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PInvestProjectActivity"
            android:label="@string/title_activity_pinvest_project" />
        <activity
            android:name=".activity.PProjectDetailActivity"
            android:label="@string/title_activity_pproject_detail" />
        <activity
            android:name=".activity.PInvestConfirmActivity"
            android:label="@string/title_activity_pinvest_confirm" />
        <activity
            android:name=".activity.PAccountSetActivity"
            android:label="@string/title_activity_paccount_set" />
        <activity
            android:name=".activity.PWithdrawActivity"
            android:label="@string/title_activity_precharge" />
        <activity
            android:name=".activity.PRechargeActivity"
            android:label="@string/title_activity_pwithdraw" />
        <activity
            android:name=".activity.PSelfLoanActivity"
            android:label="@string/title_activity_pself_loan" />
        <activity
            android:name=".activity.PSelfInvestActivity"
            android:label="@string/title_activity_pself_invest" />
        <activity
            android:name=".activity.PRepaymentActivity"
            android:label="@string/title_activity_prepayment" />
        <activity
            android:name=".activity.PAccountActivity"
            android:label="@string/title_activity_paccount" />
        <activity
            android:name=".activity.PTradeRecordActivity"
            android:label="@string/title_activity_ptrade_record" />
        <activity
            android:name=".activity.PLoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/title_activity_plogin"></activity>
        <activity
            android:name=".activity.PRegistActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/title_activity_pregist"></activity>
        <activity
            android:name=".activity.PResetPwdActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/title_activity_preset_pwd"></activity>
    </application>

</manifest>
