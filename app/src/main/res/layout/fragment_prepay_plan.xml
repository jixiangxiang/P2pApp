<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/p_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white">

        <TextView
            style="@style/text_10_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="应还本金" />

        <TextView
            android:id="@+id/principle"
            style="@style/text_10_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_67"
            android:gravity="center_vertical"
            android:text="0.00" />

        <TextView
            style="@style/text_10_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_125"
            android:gravity="center_vertical"
            android:text="利息" />

        <TextView
            android:id="@+id/interest"
            style="@style/text_10_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_150"
            android:gravity="center_vertical"
            android:text="0.00" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="单位:元" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="期数" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="还款日期" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总额" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本金" />

        <TextView
            style="@style/text_10_999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="利息" />
    </LinearLayout>

    <cn.com.infohold.p2papp.views.WrapScrollListView
        android:id="@+id/repayPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/p_bg_color"
        android:dividerHeight="@dimen/dp_1">

    </cn.com.infohold.p2papp.views.WrapScrollListView>

    <TextView
        android:id="@+id/repayDetail"
        style="@style/text_13_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="-40dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="查看实际还款明细" />
</LinearLayout>